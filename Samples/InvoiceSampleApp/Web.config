  http://go.microsoft.com/fwlink/?LinkId=169433
  -->
<configuration>
	<configSections>
		<section name="log4net" type="log4net.Config.Log4NetConfigurationSectionHandler, log4net"/>
	</configSections>
		<log4net>
		<appender name="FileAppender" type="log4net.Appender.FileAppender">
			<file value="InvoiceSampleAppLog.log"/>
			<appendToFile value="true"/>
			<layout type="log4net.Layout.PatternLayout">
				<conversionPattern value="%date [%thread] %-5level %logger [%property{NDC}] %message%newline"/>
			</layout>
		</appender>
		<root>
			<level value="DEBUG"/>
			<appender-ref ref="FileAppender"/>
		</root>
	</log4net>
	<system.web>
		<customErrors mode="On" defaultRedirect="ShowError.aspx"></customErrors>
		<httpHandlers>
			<add verb="*" path="InvoiceHandler" type="InvoicingSampleApp.InvoiceHandler, InvoicingSampleApp"/>
		</httpHandlers>
		<compilation debug="true"/></system.web>
	<appSettings>
		<add key="PAYPAL_REDIRECT_URL" value="https://www.sandbox.paypal.com/webscr&amp;cmd="/>
	</appSettings>
</configuration>
